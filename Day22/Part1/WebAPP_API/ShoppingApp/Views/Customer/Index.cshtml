<h1>Customers </h1>
<hr />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Address</th>
            <th>Customer Email</th>
            <th>Customer ContactNumber</th>
            <th>Customer Age</th>
        </tr>
    </thead>
    <tbody>
        <!--   Razor Syntax-->
        <!-- Mixing C# and HTML Code together in .csthml-->
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Location</td>
                <td>@customer.ContactNumber</td>
                <td>@customer.Age</td>
                <td>
                    <a href="@Url.Action("update", "customer", new { id = customer.Id })">Edit</a> |
                    <a href="@Url.Action("details", "customer", new { id = customer.Id })">Details</a> |
                    <a href="@Url.Action("Delete", "Customer", new { id = customer.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
